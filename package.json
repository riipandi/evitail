{
    "name": "evitail",
    "version": "1.0.0",
    "description": "An Electron application with React and TypeScript",
    "main": "./out/main/index.js",
    "author": {
        "name": "Aris Ripandi",
        "email": "aris@duck.com"
    },
    "homepage": "https://www.electronjs.org",
    "license": "UNLICENSED",
    "scripts": {
        "format": "prettier --write \"**/*.{json,css,cjs,mjs,js,jsx,ts,tsx,yml}\"",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "npm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "npm run build && electron-builder --win --config",
        "build:mac": "electron-vite build && electron-builder --mac --config",
        "build:linux": "electron-vite build && electron-builder --linux --config",
        "clean": "rimraf node_modules dist out",
        "test": "vitest run --environment jsdom",
        "test:ui": "vitest --ui --environment jsdom",
        "test:watch": "vitest watch --environment jsdom",
        "coverage": "vitest run --coverage --environment jsdom"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^2.0.0",
        "@electron-toolkit/utils": "^2.0.0",
        "electron-updater": "^6.1.4"
    },
    "devDependencies": {
        "@egoist/tailwindcss-icons": "^1.1.0",
        "@electron-toolkit/eslint-config-prettier": "^1.0.1",
        "@electron-toolkit/eslint-config-ts": "^1.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@iconify-json/heroicons": "^1.1.12",
        "@iconify-json/ph": "^1.1.6",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/dom": "^9.3.1",
        "@testing-library/jest-dom": "^6.1.3",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^20.6.0",
        "@types/react-dom": "^18.2.7",
        "@types/react": "^18.2.21",
        "@types/testing-library__jest-dom": "^5.14.9",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "@vitejs/plugin-react": "^4.0.4",
        "@vitest/coverage-v8": "^0.34.4",
        "@vitest/ui": "^0.34.4",
        "autoprefixer": "^10.4.15",
        "clsx": "^2.0.0",
        "electron-builder": "^24.6.4",
        "electron-vite": "^1.0.27",
        "electron": "^26.2.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint": "^8.49.0",
        "jsdom": "^22.1.0",
        "postcss": "^8.4.29",
        "prettier-plugin-tailwindcss": "^0.5.4",
        "prettier": "^3.0.3",
        "react-dom": "^18.2.0",
        "react": "^18.2.0",
        "regenerator-runtime": "0.14.0",
        "rimraf": "^5.0.1",
        "tailwind-merge": "^1.14.0",
        "tailwindcss-debug-screens": "^2.2.1",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vitest": "^0.34.4"
    }
}
